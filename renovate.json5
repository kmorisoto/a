{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": ["gradle", "dockerfile"],
  "dockerfile": {
    "fileMatch": [
      "^/docker/Dockerfile$",
    ]
  },
  "packageRules": [
    {
      "matchPackageNames": ["org.springframework.boot:spring-boot-dependencies"],
      "groupName": "Spring Boot Dependencies",
      "enabled": true
    }
  ]
}
